void LcdWriteCmd(byte cmd,int a)
{
     //DC pin is low for commands
    digitalWrite(DC, a);
    digitalWrite(CE, LOW);
    shiftOut(DIN, CLK, MSBFIRST, cmd); //transmit serial data
    digitalWrite(CE, HIGH);
}

void LcdWriteCmd(String cmd)
{
     //DC pin is low for commands
    digitalWrite(DC, 1);
    digitalWrite(CE, LOW);
    for(int i=0;i<8;i++)
    {
    digitalWrite(CLK,LOW);   
    digitalWrite(DIN,(cmd[i])-48); 
    digitalWrite(CLK,HIGH);     
    }
    digitalWrite(CE, HIGH);
}
