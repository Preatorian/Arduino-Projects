void printchar(char a,int x,int y,bool color)
{
    int c = (a-32)*6;
    for(int n=0;n<6;n++)
    {   
        for(int m=0;m<8;m++)
        {  
            
            if((SmallFont[c+n] & (1 << m)) >> m)
                pixel(x+n,y+m,color);
               
        }
    }
}
