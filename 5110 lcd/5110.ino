void line(int x1,int y1,int x2, int y2,bool color)
{
    int c,nextxa=0,nextya=0,nextxb=0,nextyb=0;
    double tg = 0;
    if(x1>x2)
    {
        c = x1;
        x1 = x2;
        x2 = c;
        c = y1;
        y1 = y2;
        y2 = c;
    }
    tg = (y1 - y2)/(double)(x2 - x1);
    if(tg>=1)
    {   
        nextya--; 
        nextxb++; 
        nextyb--;  
  
        return;
    }
    else if(tg < 1 && tg >=0)
    {
        nextxa++;
        nextya--;
        nextxb++;   
        Serial.println(2);  
    }
    else if(tg < 0 && tg >= -1)
    {
        nextxa++;
        nextxb++;  
        nextyb++;  
        Serial.println(3);
    }
    else if(tg <-1)
    {
        nextxa++;  
        nextya++; 
        nextyb++;
        Serial.println(4);
    }
    do
    {
        pixel(x1,y1,color);
        if(abs(((y1 + nextya - y2)/(double)(x2 - (x1 + nextxa))) - tg) > abs(((y1 + nextyb - y2)/(double)(x2 - (x1 + nextxb))) - tg))
        {
            x1 += nextxb;
            y1 += nextyb;
        }
        else
        {
            x1 += nextxa;
            y1 += nextya;
        }
    }while(x1<x2);
              
}



void pixel(int x,int y,bool color)
{
    if(color)
        taab[y/8][x] |= (1 << (y%8));   
    else
        taab[y/8][x] &= ~(1 << (y%8)); 
}

